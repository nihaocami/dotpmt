    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "prompt",
    "llm",
    "ai",
    "template",
    "openai",
    "prompt-engineering",
    "cli",
    "fs",
    "typescript"
  ],
  "homepage": "https://github.com/nihaocami/dotpmt",
  "repository": {
    "type": "git",
    "url": "https://github.com/nihaocami/dotpmt.git"
